<%= form_with(model: @blog, url: choose_new_or_edit, local: true) do |form| %>
<% if @blog.errors.any? %>
  <div id="error_explanation">
    <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
    <ul>

    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="day8blog_title">
  <%= form.label :入力欄 %>
  <%= form.text_field :content %>
</div>
  <button type="submit" class="btn btn-primary">新規作成</button>
<% end %>
<%= link_to '一覧画面にもどる', blogs_path %>
